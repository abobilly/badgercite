{
  "build": {
    "buildCommand": "npm install --omit=dev",
    "environment": {
      "NODE_ENV": "production"
    }
  },
  "deploy": {
    "startCommand": "node index.js",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 180,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}