{
  "name": "badgercite",
  "version": "1.0.0",
  "description": "Professional legal citation formatter for all U.S. jurisdictions",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon server/index.js",
    "client:dev": "cd client && npm start",
    "build": "echo 'Server deployment - no build step required'",
    "start": "node server/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint server/ client/src/ --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write server/ client/src/"
  },
  "keywords": [
    "legal",
    "citation",
    "bluebook",
    "greenbook",
    "texas",
    "law",
    "professional",
    "badgercite"
  ],
  "author": "BadgerCite",
  "license": "PROPRIETARY",
  "dependencies": {
    "axios": "^1.12.2",
    "cheerio": "^1.1.2",
    "compression": "^1.8.1",
    "compromise": "^14.14.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "joi": "^18.0.1",
    "levenshtein": "^1.0.5",
    "morgan": "^1.10.1",
    "natural": "^8.1.0",
    "pg": "^8.16.3",
    "rate-limiter-flexible": "^8.0.1",
    "redis": "^5.8.2",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "concurrently": "^9.2.1",
    "eslint": "^9.36.0",
    "jest": "^30.1.3",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
