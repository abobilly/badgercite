{
  "name": "badgercite",
  "version": "1.0.0",
  "description": "Professional legal citation formatter for all U.S. jurisdictions",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon server/index.js",
    "client:dev": "cd client && npm start",
    "build": "echo 'Server deployment - no build step required'",
    "start": "node server/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint server/ client/src/ --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write server/ client/src/"
  },
  "keywords": [
    "legal",
    "citation",
    "bluebook",
    "greenbook",
    "texas",
    "law",
    "professional",
    "badgercite"
  ],
  "author": "BadgerCite",
  "license": "PROPRIETARY",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "natural": "^6.8.0",
    "levenshtein": "^1.0.5",
    "compromise": "^14.10.0",
    "dotenv": "^16.3.1",
    "joi": "^17.11.0",
    "rate-limiter-flexible": "^3.0.6",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.53.0",
    "prettier": "^3.0.3",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}